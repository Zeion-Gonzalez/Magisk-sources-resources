<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:tag="layout/activity_request_0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/WidgetFoundation.Card.Elevated">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/su_popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="350dp">
        <TextView
            android:textAppearance="@style/AppearanceFoundation.Title"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:id="@+id/request_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l1"
            android:layout_marginBottom="@dimen/l_50"
            android:text="@string/su_request_title"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l_50"
            android:layout_marginBottom="@dimen/l_50"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">
            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/app_icon"
                android:tag="binding_1"
                android:padding="0dp"
                android:layout_weight="0"
                android:layout_marginStart="@dimen/l_50"
                android:layout_marginEnd="@dimen/l1"
                app:tint="@null"
                style="@style/WidgetFoundation.Icon"/>
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textAppearance="@style/AppearanceFoundation.Body"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:id="@+id/app_name"
                    android:tag="binding_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="300dp"
                    android:minWidth="200dp"
                    android:maxLines="1"/>
                <TextView
                    android:textAppearance="@style/AppearanceFoundation.Caption.Variant"
                    android:ellipsize="end"
                    android:id="@+id/package_name"
                    android:tag="binding_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="300dp"
                    android:minWidth="200dp"
                    android:maxLines="1"/>
            </LinearLayout>
        </LinearLayout>
        <Spinner
            android:layout_gravity="center_horizontal"
            android:id="@+id/timeout"
            android:tag="binding_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAppearance="@style/AppearanceFoundation.Body"
            android:textStyle="bold"
            android:textColor="?attr/colorError"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:id="@+id/warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/l1"
            android:text="@string/su_warning"/>
        <LinearLayout
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/l2"
            android:paddingEnd="@dimen/l2"
            style="?android:attr/buttonBarStyle">
            <Button
                android:textColor="?attr/colorOnSurfaceVariant"
                android:id="@+id/deny_btn"
                android:tag="binding_5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/WidgetFoundation.Button.Text"/>
            <Button
                android:id="@+id/grant_btn"
                android:tag="binding_6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/grant"
                android:layout_weight="1"
                style="@style/WidgetFoundation.Button.Text"/>
            <requestFocus/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
